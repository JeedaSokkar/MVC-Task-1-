@model WebApplication1.Models.Category


   <h1>Add Product</h1>
   <form action="/Product/Create" method="post">
    <div class="mb-3">
      
        <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Product Name">
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">


            <textarea name="Description" class="form-control" placeholder="Product Description" rows="3">@Model.Description</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

    </div>
        <div class="input-group mb-3">
            <input type="text" name="Price" value="@Model.Price" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
            <span class="input-group-text">$</span>
            <span class="input-group-text">0.00</span>


        </div>
    <span asp-validation-for="Price" class="text-danger"></span>

    <div>
        <button type="submit" class="btn btn-primary">Create</button>
		</div>
	</form>
 