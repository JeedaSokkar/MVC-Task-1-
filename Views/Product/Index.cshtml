<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <h2>All Products</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a href="/Product/Details/@item.Id">Details</a>
                    </td>
                    <td>@item.Price</td>
                    
                </tr>
            }
        </tbody>
    </table>

</body>
    </html>
