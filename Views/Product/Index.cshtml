<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Products</h2>
    <button type="button" class="btn btn-primary"><a href="/Product/Create" class=" text-white text-decoration-none">Create</a></button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Delete</th>

                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a href="/Product/Details/@item.Id" class="text-decoration-none">Details</a>
                    </td>
                    <td>
                        <a href="/Product/Delete/@item.Id" class="link-danger text-decoration-none link-offset-2 link-underline-opacity-25" >Delete</a>
                    </td>
                    
                    <td>@item.Price</td>
                    
                </tr>
            }
        </tbody>
    </table>

</body>
    </html>
